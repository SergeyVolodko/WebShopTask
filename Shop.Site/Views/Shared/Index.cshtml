
<div ng-controller="registerUserController">
    <div>
        Login: <input type="text" ng-model="login" />
    </div>
    <div>
        Password: <input type="password" ng-model="password" />
    </div>
    <div>
        First name: <input type="text" ng-model="firstName" />
    </div>
    <div>
        Last name: <input type="text" ng-model="lastName" />
    </div>
    <input type="button" value="Register" ng-click="register()">
</div>
<br/>

<div ng-controller="loginUserController">
    <div ng-show="!loggedUser">
        <div>
            Login: <input type="text" ng-model="login" />
        </div>
        <div>
            Password: <input type="password" ng-model="password" />
        </div>
        <input type="button" value="Login" ng-click="authenticate()">
    </div>
    
    <div>
        <h2 ng-bind="loggedUser"></h2>

        <span ng-bind="firstName"> </span>
        <span ng-bind="lastName"></span>
    </div>
    
</div>